<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiLaser.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiLaser.Views"
    Shell.FlyoutBehavior="Flyout">

    <FlyoutItem Title="Home" FlyoutIcon="appicon.svg">
        <ShellContent Title="Home" ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Defect" FlyoutIcon="appicon.svg">
        <ShellContent Title="Defect" ContentTemplate="{DataTemplate local:ImageInfoPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Setting" FlyoutIcon="appicon.svg">
        <ShellContent Title="Setting" ContentTemplate="{DataTemplate local:SettingPage}" />
    </FlyoutItem>

</Shell>
